{
  "info": {
    "_postman_id": "laravel-microservices-auth-notification",
    "name": "Laravel Microservices - Auth & Notification",
    "description": "Complete authentication and email notification system testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Student Service",
      "item": [
        {
          "name": "01. Student Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"email\": \"alice@example.com\",\n  \"phone\": \"1234567890\",\n  \"registration_number\": \"REG-2026-001\",\n  \"department\": \"Computer Science\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/students/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "signup"]
            },
            "description": "Register a new student - Triggers welcome email notification"
          },
          "response": []
        },
        {
          "name": "02. Get All Students",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/students",
              "host": ["{{base_url}}"],
              "path": ["api", "students"]
            },
            "description": "List all registered students with pagination"
          },
          "response": []
        },
        {
          "name": "03. Get Student by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/students/1",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "1"]
            },
            "description": "Get specific student details by ID"
          },
          "response": []
        },
        {
          "name": "04. Update Student",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Johnson Updated\",\n  \"phone\": \"9876543210\",\n  \"department\": \"Data Science\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/students/1",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "1"]
            },
            "description": "Update student details"
          },
          "response": []
        },
        {
          "name": "05. Delete Student",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/students/1",
              "host": ["{{base_url}}"],
              "path": ["api", "students", "1"]
            },
            "description": "Delete a student record"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "06. Auth Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user account"
          },
          "response": []
        },
        {
          "name": "07. Auth Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login user - Triggers login confirmation email notification"
          },
          "response": []
        },
        {
          "name": "08. Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Get current authenticated user profile - Requires token"
          },
          "response": []
        },
        {
          "name": "09. Auth Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout user - Revokes API token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Kafka Events",
      "item": [
        {
          "name": "10. Publish Student Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "Publish via terminal:\ndocker exec student php artisan student:publish-event \"Name\" \"email@example.com\""
            },
            "url": {
              "raw": "terminal-command",
              "host": ["terminal-command"]
            },
            "description": "Use terminal to publish events (not HTTP endpoint)"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "api_token",
      "value": "your-api-token-here",
      "type": "string"
    }
  ]
}
